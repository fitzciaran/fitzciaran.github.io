{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "webpack",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$tsc-watch",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "dependsOn": "watch"
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "webpack --watch",
      "isBackground": true
    }
  ]
}
